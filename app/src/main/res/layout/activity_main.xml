<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:text="@string/p001"
            android:onClick="problem001" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/answerArea" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:layout_width="342dp"
            android:layout_height="48dp"
            android:id="@+id/answerArea" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:textAlignment="textEnd" android:textSize="36sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/frame_style"
            android:paddingEnd="10dp" android:paddingRight="10dp"/>
</android.support.constraint.ConstraintLayout>