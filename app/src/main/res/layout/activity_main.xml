<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1" android:text="@string/p001"
            android:onClick="p001" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/answerArea" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:layout_width="342dp"
            android:layout_height="48dp"
            android:id="@+id/answerArea" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:textAlignment="textEnd" android:textSize="36sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/frame_style"
            android:paddingEnd="10dp" android:paddingRight="10dp"/>
    <Button
            android:text="@string/p002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/answerArea" android:onClick="p002"
            app:layout_constraintStart_toEndOf="@+id/button1" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button3"/>
    <Button
            android:text="@string/p003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/answerArea" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:onClick="p003"/>
</android.support.constraint.ConstraintLayout>